                <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">4.95</p>
                <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">out of</p>
                <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">5</p>
            </div>
            <!-- /rating bar -->

            <div class="flex justify-center">
                <div class="border-b border-gray-300 w-4/5"></div>
            </div>

            <div class="flex justify-left mt-4">
                <h3 class="text-3xl font-bold mb-2">${{ product.price }}</h3>
            </div>

            <p class="text-gray-600 dark:text-black-300 text-sm mb-4 pt-4">
               {{ product.longDescription }}
            </p>
        </div>

        <!-- Right Column (smallest) -->
        <div class="col-span-2 bg-gray-100 p-6 rounded-lg shadow-md">
            <h3 class="text-3xl font-bold mb-2">${{ product.price }}</h3>
            <div class="flex justify-left">
                <span class="text-xl font-semibold text-green-700">In Stock</span>
            </div>

            <!-- Quantity Dropdown -->
            <div class="mb-4 pt-2">
                <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                <select id="quantity" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

            <!-- Add to Cart Button -->
            <div class="mb-3">
                <a href="{{ path('app_cart_add_item', {'id': product.id}) }}" class="w-full block text-center py-1.5 bg-yellow-500 text-white font-semibold rounded-md hover:bg-yellow-600 transition duration-200">
                    Add to Cart
                </a>
            </div>

            <!-- Buy Now Button -->
            <div class="mb-4">
                <button class="w-full py-1.5 bg-yellow-600 text-white font-semibold rounded-md hover:bg-yellow-800 transition duration-200">
                    Buy Now
                </button>
            </div>

            <!-- Schedule and Save Button -->
            <div>
                <button class="w-full py-1.5 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition duration-200">
                    Schedule and Save
                </button>
            </div>

        </div>

    </div>
