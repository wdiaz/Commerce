{% extends 'base.html.twig' %}

{% block title %}Hello StoreController!{% endblock %}

{% block body %}

    <!-- Main Content -->
    <div class="p-4">

        <div class="flex items-center justify-between bg-white shadow-lg rounded-lg p-4 mb-4">
            <img src="https://m.media-amazon.com/images/S/stores-image-uploads-na-prod/2/AmazonStores/ATVPDKIKX0DER/7e3d18411d9f5f3ff6dda1af65e9478e.w3000.h601._CR0%2C1%2C3000%2C600_SX1920_.jpg" alt="">
        </div>
        <!-- Merchant Menu and Search Bar -->
        <div class="flex items-center justify-between bg-white shadow-lg rounded-lg p-4 mb-4">
            <nav class="flex space-x-8">
                <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-300">Home</a>
                <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-300">Shop</a>
                <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-300">About Us</a>
                <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-300">Contact</a>
            </nav>
            <div class="flex-1 max-w-xs ml-auto">
                <label>
                    <input type="text" placeholder="Search within this store" class="border border-gray-300 rounded-lg w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600" />
                </label>
            </div>
        </div>

        <!-- Categories Section -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 mb-4">
            <div class="bg-gray-200 rounded-lg p-4 text-center">
                <h3 class="font-bold">Electronics</h3>
                <img src="https://via.placeholder.com/150" alt="Electronics" class="mx-auto mb-2">
            </div>
            <div class="bg-gray-200 rounded-lg p-4 text-center">
                <h3 class="font-bold">Fashion</h3>
                <img src="https://via.placeholder.com/150" alt="Fashion" class="mx-auto mb-2">
            </div>
            <div class="bg-gray-200 rounded-lg p-4 text-center">
                <h3 class="font-bold">Home & Garden</h3>
                <img src="https://via.placeholder.com/150" alt="Home & Garden" class="mx-auto mb-2">
            </div>
            <div class="bg-gray-200 rounded-lg p-4 text-center">
                <h3 class="font-bold">Sports</h3>
                <img src="https://via.placeholder.com/150" alt="Sports" class="mx-auto mb-2">
            </div>
        </div>
        <!-- Products Section -->
        <h2 class="text-xl font-semibold mb-4">Featured Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Product Card -->

            {% for product in products %}
            <div class="bg-white border rounded-lg p-4">
                <img src="{{ product.mainImage }}" alt="Product Image" class="w-full h-32 object-cover rounded-md mb-2">
                <h3 class="font-bold">{{ product.name }}</h3>
                <p class="text-gray-700">${{ product.price }}</p>
                <button class="mt-2 bg-blue-600 text-white rounded px-4 py-2 hover:bg-blue-700">Add to Cart</button>
            </div>
            {% endfor %}
            <!-- Add more product cards as needed -->
        </div>
    </div>

{% endblock %}
