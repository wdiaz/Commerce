{% extends 'base.html.twig' %}

{% block title %}ProductOption{% endblock %}

{% block body %}
    <h1>ProductOption</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_option.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product_option.name }}</td>
            </tr>
            <tr>
                <th>OptionType</th>
                <td>{{ product_option.optionType }}</td>
            </tr>
            <tr>
                <th>AttributeName</th>
                <td>{{ product_option.attributeName }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ product_option.label }}</td>
            </tr>
            <tr>
                <th>IsRequired</th>
                <td>{{ product_option.isRequired ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DisplayOrder</th>
                <td>{{ product_option.displayOrder }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_option_index') }}">back to list</a>

    <a href="{{ path('app_product_option_edit', {'id': product_option.id}) }}">edit</a>

    {{ include('product_option/_delete_form.html.twig') }}
